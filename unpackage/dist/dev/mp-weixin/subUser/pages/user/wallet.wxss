  color: #485EF4;
  border: 2rpx solid #485EF4;
  margin-top: 26rpx;
}
page .gt_content .con_tip {
  width: 750rpx;
  font-size: 24rpx;
  font-family: SourceHanSansCN-Regular, SourceHanSansCN;
  font-weight: 400;
  color: #909399;
  line-height: 36rpx;
  text-align: center;
  margin-top: 132rpx;
  position: absolute;
  bottom: 70rpx;
}

